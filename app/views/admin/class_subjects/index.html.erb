<div class="row text-center">
  <div class="col-sm-6 col-lg-3">
    <%= link_to new_admin_class_subject_path, class:"widget widget-hover-efect2" do %>
      <div class="widget-extra themed-background-success">
        <h4 class="widget-content-light"><strong>Thêm lớp học phần</strong></h4>
      </div>
      <div class="widget-extra-full"><span class="h2 tẽt-success animation-expandOpen"><i class="fa fa-plus"></i></span></div>
    <% end %>
  </div>
  <div class="col-sm-6 col-lg-3">
    <%= link_to "#", class:"widget widget-hover-effect2" do %>
      <div class="widget-extra themed-background-default">
        <h4 class="widget-content-light"><strong>Import file excel</strong></h4>
      </div>
      <div class="widget-extra-full"><span class="h2 tẽt-success animation-expandOpen"><i class="fa fa-plus"></i></span></div>
    <% end %>
  </div>
  <div class="col-sm-6 col-lg-3">
    <%= link_to "#", class:"widget widget-hover-effect2" do %>
      <div class="widget-extra themed-background-dark">
        <h4 class="widget-content-light"><strong>Tổng số lớp học phần</strong></h4>
      </div>
      <div class="widget-extra-full"><span class="h2 themed-color-dark animation-expandOpen"><%= @class_subjects.count if @class_subjects.present? %></span></div>
    <% end %>
  </div>
</div>

<div class="block full">
  <div class="block-title row">
    <div class="col-md-8">
      <h2><strong>Danh sách lớp học phần</strong></h2>
    </div>
    <div class="col-md-4">
      <%= text_field_tag :class_subject_search, params[:class_subject_search],
        placeholder: "Tìm kiếm...", class: "form-control search-box", style:"margin: 5px" %> 
    </div>
  </div>
  <div class="row">
    <%= form_tag import_admin_class_subjects_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import", class: "btn btn-success" %>
    <% end %>
  </div>
  <br>
  <div class="row text-center">
    <% if @class_subjects.present? %>
      <div class="table-responsive">
      <div class="col-md-10 col-md-offset-1">
        <table class="table table-vcenter table-striped table-bordered">
          <tdead>
            <tr>
              <th class="text-center"><strong>STT</strong></th>
              <th class="text-center"><strong>Mã lớp học phần</strong></th>
              <th class="text-center"><strong>Học phần</strong></th>
              <th class="text-center"><strong>Giảng viên</strong></th>
              <th class="text-center"><strong>Học kỳ</strong></th>
              <th class="text-center"><strong>Danh sách lớp</strong></th>
              <th class="text-center"><strong>Quản lý điểm</strong></th>
              <th></th>
            </tr>
          </tdead>
          <tbody class="list-class-subjects">
            <%= render partial: "class_subject", locals: {class_subjects: @class_subjects} %>
          </tbody>
        </table>
        <%= paginate @class_subjects %>
      </div>
      </div>
    <% end %>
  </div>
</div>
