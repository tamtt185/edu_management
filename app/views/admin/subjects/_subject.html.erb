<% if subjects.any? %>
  <% subjects.each_with_index do |subject, index| %>
    <tr>
      <td class="text-center"><%= show_index(@subjects.current_page, index) %></td>
      <td class="text-center"><%= subject.subject_id %></td>
      <td class="text-left"><%= subject.name %></td>
      <td class="text-center"><%= subject.num_of_credit %></td>
      <td class="text-center">
        <% if subject.is_elective? %>
          Có
        <% else %>
          Không
        <% end %>
      </td>
      <td class="text-center">
        <% if subject.theory? %>
          Lý thuyết
        <% elsif subject.practice? %>
          Thực hành
        <% elsif subject.project? %>
          Đồ án
        <% elsif subject.intership? %>
          Thực tập
        <% end %>
      </td>
      <td class="text-center">
        <%= get_name_of_subject subject.prerequisite_subject_id %>
      </td>
      <td class="text-center">
        <%= get_name_of_subject subject.study_first_subject_id %>
      </td>
      <td class="text-center">
        <%= get_name_of_subject subject.parallel_subject_id %>
      </td>
      <td class="text-center">
        <div class="btn-group">
          <%= link_to edit_admin_subject_path(subject), class:"btn btn-xs btn-default" do %>
            <i class="fa fa-pencil"></i>
          <% end %>
          <%= link_to [:admin, subject], method: :delete,
            data: {confirm: "Bạn muốn xóa học phần này? "}, 
            class:"btn btn-xs btn-danger" do %>
            <i class="fa fa-times"></i>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
<% end %>
