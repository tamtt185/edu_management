<div class="block full">
  <div class="block-title row">
    <div class="col-md-8">
      <h2><strong>Danh sách học phần</strong></h2>
    </div>
    <div class="col-md-4">
      <%= text_field_tag :subject_search, params[:subject_search],
        placeholder: "Tìm kiếm...", class: "form-control search-box", style:"margin: 5px" %> 
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= link_to new_admin_subject_path, class:"btn btn-success" do %>
        <i class="fa fa-plus"></i>
        Thêm học phần
      <% end %>
    </div>
    <div class="col-md-4">
      <%= form_tag import_admin_subjects_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row text-center">
    <% if @subjects.any? %>
      <div class="table-responsive">
      <div class="col-md-12">
        <table class="table table-vcenter table-striped table-bordered">
          <tdead>
            <tr>
              <th class="text-center"><strong>STT</strong></th>
              <th class="text-center"><strong>Mã học phần</strong></th>
              <th class="text-center"><strong>Tên học phần</strong></th>
              <th class="text-center"><strong>Số tín chỉ</strong></th>
              <th class="text-center"><strong>Tự chọn</strong></th>
              <th class="text-center"><strong>Loại học phần</strong></th>
              <th class="text-center"><strong>HP tiên quyết</strong></th>
              <th class="text-center"><strong>HP học trước</strong></th>
              <th class="text-center"><strong>Song hành với HP</strong></th>
              <th></th>
            </tr>
          </tdead>
          <tbody class="list-subjects">
            <%= render partial: "subject", locals: {subjects: @subjects} %>
          </tbody>
        </table>
        <%= paginate @subjects %>
      </div>
      </div>
    <% end %>
  </div>
</div>
