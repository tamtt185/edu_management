<div class="block full">
  <div class="block-title row">
    <div class="col-md-8">
      <h2><strong>Danh sách chương trình đào tạo</strong></h2>
    </div>
    <div class="col-md-4">
      <%= text_field_tag :curriculum_search, params[:curriculum_search],
        placeholder: "Tìm kiếm...", class: "form-control search-box", style:"margin: 5px" %> 
    </div>
  </div>
  <div class="row">
     <div class="col-md-4 col-md-offset-1">
      <%= link_to new_admin_curriculum_path, class:"btn btn-success" do %>
        <i class="fa fa-plus"></i>
        Thêm chương trình đào tạo
      <% end %>
    </div>
  </div>
  <br>
  <div class="row text-center">
    <% if @curriculums.any? %>
      <div class="table-responsive">
      <div class="col-md-10 col-md-offset-1">
        <table class="table table-vcenter table-striped table-bordered">
          <tdead>
            <tr>
              <th class="text-center"><strong>STT</strong></th>
              <th class="text-center"><strong>Mã chương trình đào tạo</strong></th>
              <th class="text-center"><strong>Tên chương trình đào tạo</strong></th>
              <th class="text-center"><strong>Số tín chỉ</strong></th>
              <th class="text-center"><strong>Khoa</strong></th>
              <th></th>
            </tr>
          </tdead>
          <tbody class="list-curriculums">
            <%= render partial: "curriculum", locals: {curriculums: @curriculums} %>
          </tbody>
        </table>
        <%= paginate @curriculums %>
      </div>
      </div>
    <% end %>
  </div>
</div>
