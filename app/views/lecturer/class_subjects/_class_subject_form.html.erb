<%= form_for [:admin, @word.category, @word] do |f| %>
  <%= render partial: "/shared/errors_message_by", object: @word %>
  <%= f.hidden_field :category_id, value: @word.category.id %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: "form-control" %>
  </div>
  <%= f.label :answers %>
  <%= f.fields_for :answers do |builder| %>
    <%= render "answer_fields", f: builder %>
  <% end %>
  <p>
    <%= link_to_add_fields raw("<span class='glyphicon glyphicon-plus-sign'></span> #{t :add_answer}"),
      f, :answers %>
  </p>
  <br/>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
